@model ProjetoCrud_.Models.Operadoras

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar seu cadastro</h1>

<h4>Operadoras</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Operadora" class="control-label"></label>
                <input asp-for="Operadora" class="form-control" />
                <span asp-validation-for="Operadora" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div><br />
    <a asp-action="Index">Voltar a Listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
